<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_shop_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white"
            android:background="@color/pink"
            app:title="Event Management" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <FrameLayout
            android:id="@+id/container_shop_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/title_shop_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/aclonica"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Shop Details"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/pink"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/edit_text_bg"
                android:elevation="4dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_15sdp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"

                android:text="Shop Name :"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/edit_text_bg"
                android:elevation="4dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_15sdp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"

                android:text="Address :"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/shop_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="240dp"
                android:background="@drawable/edit_text_bg"
                android:elevation="4dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_15sdp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"

                android:text="Phone Number :"
                android:textSize="@dimen/_10sdp" />



            <TextView
                android:id="@+id/shop_open_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="7dp"
              android:layout_marginTop="300dp"
                android:background="@drawable/edit_text_bg"
                android:elevation="4dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_15sdp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"

                android:text="Open Time :"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/shop_close_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
               android:layout_marginTop="360dp"
                android:background="@drawable/edit_text_bg"
                android:elevation="4dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_15sdp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"

                android:text="Close Time :"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/shop_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="420dp"
                android:layout_marginBottom="250dp"
                android:background="@drawable/edit_text_bg"
                android:elevation="4dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_15sdp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"

                android:text="Rating :"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/shop_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="120dp"
                android:elevation="4dp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Balloon wala" />

            <TextView
                android:id="@+id/shop_address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="180dp"
                android:elevation="4dp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Dindoli,Surat." />

            <TextView
                android:id="@+id/shop_phone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="240dp"
                android:elevation="4dp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="9925299814" />


            <TextView
                android:id="@+id/shop_open_time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="300dp"
                android:elevation="4dp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="8 AM" />

            <TextView
                android:id="@+id/shop_close_time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="360dp"
                android:elevation="4dp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="10 PM" />

            <TextView
                android:id="@+id/shop_rating1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="420dp"
                android:elevation="4dp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="4.5(20)" />

        </RelativeLayout>
        </FrameLayout>
    </ScrollView>

</LinearLayout>
