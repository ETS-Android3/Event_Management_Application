<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_setEventDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white"
            android:background="@color/pink"
            app:title="Event Management" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:id="@+id/container_setEventDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/title_shop_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/aclonica"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Details"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/pink"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/set_meeting_selected_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="Choose Event Date : "
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:elevation="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="18dp"
                />

<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:id="@+id/set_meeting_calender_picker"-->
<!--                android:layout_width="115dp"-->
<!--                android:layout_height="49dp"-->

<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_alignParentTop="true"-->

<!--                android:layout_marginEnd="20dp"-->
<!--                android:layout_marginTop="120dp"-->
<!--                android:background="@drawable/ic_action_calender" />-->

            <TextView
                android:id="@+id/set_metting_selected_time"
                android:layout_marginEnd="20dp"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
               android:layout_marginTop="180dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="Choose Event Time : "
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:elevation="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                />

<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:id="@+id/set_meeting_time_picker"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_alignParentTop="true"-->

<!--                android:layout_marginEnd="50dp"-->
<!--              android:layout_marginTop="180dp"-->
<!--                android:background="@drawable/ic_time" />-->
            <EditText
                android:id="@+id/provided_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:textSize="18dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="240dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="Enter provided price "
                android:inputType="numberDecimal"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:elevation="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                />


            <EditText
                android:id="@+id/set_metting_description"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/edit_text_bg"
                android:elevation="2dp"
                android:ems="10"
                android:hint="Description "
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="18dp"
                android:textAlignment="gravity"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/set_event_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
             android:layout_marginTop="450dp"
                android:layout_marginBottom="240dp"
                android:background="@drawable/button_bg"
                android:paddingBottom="5dp"
                android:text="Booking"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="453dp" />


        </RelativeLayout>
        </FrameLayout>
    </ScrollView>

</LinearLayout>
